<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ScanProductActivity">

    <TextView
        android:id="@+id/header_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details for bar code: "
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!--EditText: Input details for a particular product-->
    <EditText
        android:id="@+id/foodName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_corner"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:hint="Food name"/>

    <EditText
        android:id="@+id/foodKnownAs2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_corner"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:hint="Known As"/>

    <EditText
        android:id="@+id/foodBrand2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:hint="Brand"/>

    <EditText
        android:id="@+id/foodCategory2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_corner"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:hint="Category"/>



    <EditText
        android:id="@+id/foodExpiryDate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_corner"
        android:padding="15dp"
        android:inputType="date"
        android:focusable="false"
        android:hint="Expiry Date"/>


    <Button
        android:id="@+id/saveFoodBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SAVE" />

    <Button
        android:id="@+id/listBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Show List" />


</LinearLayout>